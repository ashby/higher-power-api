type Character {
    id: ID! @id
    title: String!
    description: String
    process: ID!
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

type Process {
    id: ID! @id
    title: String!
    sources: [ID]! @scalarList(strategy: RELATION)
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

type Source {
    id: ID! @id
    title: String!
    feelings: [ID]! @scalarList(strategy: RELATION)
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

type Path {
    id: ID! @id
    title: String!
    feelings: [ID]! @scalarList(strategy: RELATION)
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

type Feeling {
    id: ID! @id
    title: String!
    thoughts: [ID]! @scalarList(strategy: RELATION)
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

type Thought {
    id: ID! @id
    character: ID
    thought: String!
    quality: Boolean
    source: ID
    process: ID
    path: ID
    feeling: ID!
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    prayedAt: DateTime
    sharedAt: DateTime
    amendedAt: DateTime
    resolvedAt: DateTime
}

type Inventory {
    id: ID! @id
    paths: [InventoryPath]
}
type InventoryPath {
    id: ID! @id
    title: String!
    feelings: [PathFeeling]!
    createdAt: DateTime @createdAt
    updatedAt: DateTime @updatedAt
}
type PathFeeling {
    id: ID! @id
    title: String!
    thoughts: [Thought]!
    createdAt: DateTime @createdAt
    updatedAt: DateTime @updatedAt
}

type Cast {
    id: ID! @id
    characters: [CastCharacter]!
}
type CastCharacter{
    id: ID! @id
    title: String!
    description: String
    process: CharacterProcess!
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}
type CharacterProcess{
    id: ID! @id
    title: String!
    sources: [ProcessSource]!
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}
type ProcessSource{
    id: ID! @id
    title: String!
    feelings: [SourceFeeling]!
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}
type SourceFeeling {
    id: ID! @id
    title: String!
    thoughts: [Thought]!
    createdAt: DateTime @createdAt
    updatedAt: DateTime @updatedAt
}

type HigherPower {
    id: ID! @id
    inventory: Inventory
    cast: Cast
}